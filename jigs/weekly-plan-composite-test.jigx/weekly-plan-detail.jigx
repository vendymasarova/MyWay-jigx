title: =@ctx.jig.inputs.day
description: Description of your Jig
type: jig.default

datasources:
  filters:
    type: datasource.static
    options:
      data:
        - category-name: All   
          category-selected: ""
        - category-name: To Do 
          category-selected: "" 
        - category-name: Home work
          category-selected: "true"  
        - category-name: Appointments
          category-selected: "" 
          
  tasks:
    type: datasource.sqlite
    options:
      provider: DATA_PROVIDER_DYNAMIC
  
      entities:
        - default/tasks
  
      query: 
        SELECT 
          id, 
          '$.category',
          '$.type',
          '$.color',
          '$.icon',
          '$.name',
          '$.due-date',
          '$.day',
          '$.for',
          '$.description'
        FROM [default/tasks]
        WHERE '$.day' = @day 
        ORDER BY '$.category'
        # AND '$.category' LIKE @filter or @filter IS NULL
        
      queryParameters:
        # filter: =@ctx.components.tasks-category.state.filter
        day: =@ctx.jig.inputs.day

