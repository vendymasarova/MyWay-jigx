title: Name
type: jig.default

onRefresh: 
  type: action.action-list
  options:
    isSequential: true
    actions:
      - type: action.set-state
        options:
          state: =@ctx.solution.state.checklist
          value: 0
      - type: action.set-state
        options:
          state: =@ctx.solution.state.meds
          value: 0
      - type: action.set-state
        options:
          state: =@ctx.solution.state.mood
          value: 0
      - type: action.set-state
        options:
          state: =@ctx.solution.state.moodStatsDone
          value: false
      - type: action.execute-entities
        options: 
          provider: DATA_PROVIDER_DYNAMIC
          entity: default/routines
          method: update
          goBack: stay
          data:
            id: 'c20c2c99-1b80-4f21-aced-1f340735fe3a'
            isDone: false
      - type: action.execute-entities
        # when: =@ctx.datasources.mood_stats.id != null
        options: 
          provider: DATA_PROVIDER_DYNAMIC
          entity: default/mood-feelings
          method: update
          data: =@ctx.datasources.feelings.{"id" :id, "isChecked" :false}[]
      - type: action.execute-entities
        # when: =@ctx.datasources.mood_stats.id != null
        options: 
          provider: DATA_PROVIDER_DYNAMIC
          entity: default/mood-reasons
          method: update
          data: =@ctx.datasources.reasons.{"id" :id, "isChecked" :false}[]
    
datasources:
  reminders:
    type: datasource.sqlite
    options:
      provider: DATA_PROVIDER_DYNAMIC
  
      entities:
        - default/routines
  
      query: 
        SELECT 
          id, 
          '$.name', 
          '$.image',
          '$.isDone',
          '$.type',
          '$.time',
          '$.routine_id',
          '$.isCheckable',
          '$.reminder-title',
          '$.reminder-time',
          '$.routine-subject',
          '$.routine-description',
          '$.isReminiscent',
          '$.has-detail',
          '$.priority',
          '$.linkTo'
        FROM [default/routines] 
        WHERE '$.isReminiscent' = true
        AND '$.isDone' = false
        ORDER BY '$.priority'
      queryParameters:
        todoRoutineId: =@ctx.jig.inputs.routine
          
  routines:
    type: datasource.sqlite
    options:
      provider: DATA_PROVIDER_DYNAMIC
  
      entities:
        - default/routines
  
      query: 
        SELECT 
          id, 
          '$.name', 
          '$.image',
          '$.isDone',
          '$.type',
          '$.time',
          '$.routine_id',
          '$.isCheckable'
        FROM [default/routines] 
        WHERE '$.isCheckable' = true

  todos:
    type: datasource.sqlite
    options:
      provider: DATA_PROVIDER_DYNAMIC
  
      entities:
        - default/todos
  
      query: 
        SELECT 
          id, 
          '$.type', 
          '$.name',
          '$.image',
          '$.isChecked',
          '$.routine_id',
          '$.hasEmoji'
        FROM [default/todos] 
  
  mood-stats:
    type: datasource.sqlite
    options:
      provider: DATA_PROVIDER_LOCAL

      entities:
        - entity: default/mood-notes
        - entity: default/dates

      query: |
        SELECT
          a.id AS id,
            STRFTIME('%d.%m', json_extract(a.data, '$.date')) AS date,
            STRFTIME('%d', json_extract(a.data, '$.date')) AS day,
            json_extract(b.data, '$.mood') AS mood,
            json_extract(a.data, '$.date') AS dayDate
        FROM [default/dates] a
        LEFT JOIN [default/mood-notes] b ON STRFTIME('%d.%m', json_extract(a.data, '$.date')) = STRFTIME('%d.%m', json_extract(b.data, '$.date'))
        ORDER BY date
        
  feelings: 
    type: datasource.sqlite
    options:
      provider: DATA_PROVIDER_DYNAMIC
    
      entities:
        - default/mood-feelings
    
      query: 
        SELECT 
          id, 
          '$.isChecked'
        FROM [default/mood-feelings]
        
  reasons: 
    type: datasource.sqlite
    options:
      provider: DATA_PROVIDER_DYNAMIC
    
      entities:
        - default/mood-reasons
    
      query: 
        SELECT 
          id, 
          '$.isChecked'
        FROM [default/mood-reasons]

