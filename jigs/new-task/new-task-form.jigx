title: =@ctx.solution.state.taskId = 1 ? 'Create To Do':'Create a new task'
type: jig.default

actions:
  - children:
      - type: action.action-list
        options:
          title: Add new task
          isSequential: false
          actions:
            - type: action.submit-form
              when: =@ctx.solution.state.taskId = 1 ? true:false
              options:
                formId: todo-form
                provider: DATA_PROVIDER_DYNAMIC
                title: Submit form
                entity: default/todos
                method: save
                onSuccess: 
                  title: Huraa
                  
            - type: action.submit-form
              when: =@ctx.solution.state.taskId = 2 ? true:false
              options:
                formId: task-form
                provider: DATA_PROVIDER_DYNAMIC
                title: Submit form
                entity: default/tasks
                method: save
                onSuccess: 
                  title: Huraa

