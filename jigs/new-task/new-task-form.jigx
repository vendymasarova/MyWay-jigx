children:
  - type: component.form
    when: =@ctx.solution.state.taskId = 1 ? true:false
    instanceId: todo-form
    options:
      children:
        - type: component.field-row
          options:
            children:
              - type: component.text-field
                instanceId: todo-name
                options:
                  label: Name
        - type: component.dropdown
          instanceId: todo-type
          options:
            label: Type
            data: =@ctx.datasources.types
            style:
              flex: 1
            item:
              type: component.dropdown-item
              options:
                title: =@ctx.current.item.type
                value: =@ctx.current.item.type
                leftElement: 
                  element: avatar
                  text: =@ctx.current.item.image
                  uri: =@ctx.current.item.image
        - type: component.dropdown
          instanceId: todo-image
          options:
            label: Icon
            data: =@ctx.datasources.images
            style:
              flex: 1
            item:
              type: component.dropdown-item
              options:
                title: =@ctx.current.item.name
                value: =@ctx.current.item.image
                # leftElement: 
                #   element: image
                #   text: ''
                #   uri: =@ctx.current.item.image
                #   resizeMode: contain
                leftElement: 
                  element: avatar
                  text: =@ctx.current.item.name
                  uri: =@ctx.current.item.image
        - type: component.checkbox
          instanceId: todo-has-value
          options:
            label: Has a due-date?
            isRequired: false
            isOptionalLabelHidden: true
            icon: calendar
            onChange: 
              type: action.set-state
              options:
                state: =@ctx.solution.state.has-date
                value: =@ctx.components.todo-has-value.state.value
        - type: component.field-row
          when: =@ctx.solution.state.has-date = true ? true:false
          options:
            children:
              - type: component.date-picker
                instanceId: todo-due-date
                options:
                  label: Due-date
              - type: component.date-picker
                instanceId: todo-time
                options:
                  label: Time
                  mode: time
                  format: HH:mm
                  
  - type: component.form
    when: =@ctx.solution.state.taskId = 2 ? true:false
    instanceId: task-form
    options:
      children:
        - type: component.field-row
          options:
            children:
              - type: component.text-field
                instanceId: name
                options:
                  label: Name
        - type: component.dropdown
          instanceId: category
          options:
            label: Type
            data: =@ctx.datasources.task-type
            style:
              flex: 1
            item:
              type: component.dropdown-item
              options:
                title: =@ctx.current.item.type
                value: =@ctx.current.item.type
        - type: component.text-field
          instanceId: type
          options:
            isHidden: true
            label: Type
            value: school
        - type: component.text-field
          instanceId: description
          options:
            isMultiline: true
            label: Desctiption
        - type: component.dropdown
          instanceId: for
          options:
            label: What subject?
            data: =@ctx.datasources.subjects
            item:
              type: component.dropdown-item
              options:
                title: =@ctx.current.item.name
                value: =@ctx.current.item.name
        - type: component.checkbox
          instanceId: has-value
          options:
            label: Has a due-date?
            isRequired: false
            isOptionalLabelHidden: true
            icon: calendar
            onChange: 
              type: action.set-state
              options:
                state: =@ctx.solution.state.has-date
                value: =@ctx.components.has-value.state.value
        - type: component.field-row
          when: =@ctx.solution.state.has-date = true ? true:false
          options:
            children:
              - type: component.date-picker
                instanceId: due-date
                options:
                  label: Due-date
              - type: component.date-picker
                instanceId: time
                options:
                  label: Time
                  mode: time
                  format: HH:mm
  
  
    