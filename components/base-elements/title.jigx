type: component.default
children:
  - type: component.view
    options:
      style:
        flex: 
          direction: row
          grow: 1
        alignContent: space-between
        justifyContent: space-between
        alignItems: center
        margin: 
          top: medium     
      children:    

        - type: component.text
          options:
            size: =@ctx.inputs.size = 'small' ? 'small':'medium'
            weight: semi-bold
            value: =@ctx.inputs.title